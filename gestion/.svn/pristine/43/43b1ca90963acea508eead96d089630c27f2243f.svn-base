        h3 {
            @include amaranth-italic(30px, 30px);
            color: white;
            width: 180px;
        }

        h2 {
            color: white;
            @include avant-garde-bold(30px, 30px);
            width: 180px;
            margin-top: 44px;
        }

        .accroche {
            color: white;
            @include avant-garde-bold(16px, 22px);
            width: 180px;
            margin-top: 24px;
        }

        .encart {
            position: absolute;
            width: 100%;
            height: 92px;
            z-index: 4;
            background-color: #6ed4cc;
            text-align: right;
            padding-right: 30px;
            bottom : 0;

            .decouvrir {
                display: inline-block;
                vertical-align: middle;
                position: relative;
                margin-top: 24px;
                width: 150px;
                height: 44px;
                background-color: #6ed4cc;
                border: 1px solid #cef0ee;
                @include avant-garde-bold(15px, 44px);
                text-align: center;
                color: #ffffff;
                text-decoration: none;
                text-transform: uppercase;
