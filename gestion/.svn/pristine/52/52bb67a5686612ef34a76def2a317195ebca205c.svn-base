<?php
/**
 * @file
 * Template to display ZipCart Downloads block content.
 *
 * $count - number of files in cart currently
 * $files - the files
 */
?>
<div class="zipcart-block-downloads">
  <?php print $cart_link; ?>
  <?php foreach ($files as $file): ?>
    <div class="item-in-cart">
      <div class="remove"><?php print $file['remove']; ?></div>
      <div class="infos-item">
        <div class="title"><?php print $file['title']; ?></div>
        <?php if (!empty($file['largeur'])): ?>
          <span class="largeur"><?php print $file['largeur']; ?></span>
          <span class="format-separator"> x </span>
          <span class="hauteur"><?php print $file['hauteur']; ?></span>
        <?php endif; ?>
      </div>
    </div>
  <?php endforeach; ?>
</div>
