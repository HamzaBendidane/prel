#edit-popin-confirmation,
#edit-end-confirmation {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 1000;

  .popin-wrapper {
    position: relative;
    height: 100%;

    .popin-confirmation {
      width: 500px;
      height: 250px;
      background: white;
      top: 50%;
      left: 50%;
      position: absolute;
      transform: translate(-50%, -50%);
      padding: 20px;

      .popin-header {
        &:after {
          content: '';
          display: block;
          clear: both;
        }

        .popin-title {
          float: left;
          font-family: 'ClearfaceGothicW01-Bold_692127', sans-serif;
          font-size: 40px;
          line-height: 40px;
          color: #009ddf;
          text-transform: none;
          background: transparent url("../images/2015/page/sidebar-title-blue-sep.png") no-repeat left bottom;
          padding-bottom: 24px;
          margin-bottom: 30px;
        }

        .popin-close {
          width: 40px;
          height: 40px;
          background: transparent url("../images/2015/common/bt-close.png") no-repeat center center;
          cursor: pointer;
          text-indent: 9999px;
          overflow: hidden;
          font-size: 1px;
          position: absolute;
          bottom: 10px;
          right: 10px;
        }
      }

      .popin-content {
        text-align: center;

        p {
          margin-bottom: 30px;
        }

        .button-popin-confirmation {
          cursor: pointer;
          position: relative;
          width: 100px;
          height: 44px;
          background-color: #ffffff;
          border: 1px solid #009ddf;
          @include avant-garde-bold(15px, 44px);
          text-align: center;
          color: #009ddf;
          text-decoration: none;
          text-transform: uppercase;
          margin: 0 auto;

          &:after {
            content: "";
            position: absolute;
            width: 15px;
            height: 20px;
            background: transparent url("../images/2015/header/ico-arrow-down.png") no-repeat left top;
            right: -7.5px;
            top: 50%;
            margin-top: -10px;
            z-index: 1;
            @include single-transition(all, .2s, ease-out, .2s);
          }

          &.selected, &:hover {
            background-color: #009ddf;
            color: white;
            @include single-transition(all, .2s, ease-out, .2s);

            &:after {
              @include autoAlpha(0);
              @include single-transition(all, .2s, ease-out);
            }
          }
        }
      }
    }
  }
}

#edit-end-confirmation {
  .popin-wrapper {
    .popin-confirmation {
      width: 600px;
      height: 250px;
      background: white;
      top: 50%;
      left: 50%;
      position: absolute;
      transform: translate(-50%, -50%);
