<?php

$fieldsArray = [];
$linkTest = "";
$aideLien = "";

//construct fields array in format [] => array ([$field_key] => $field_value)
foreach ($fields as $id => $field) {

    $content = $field->content;
    $rawName = $field->raw;
    //construct an array for links
    if ($id == "field_aide_liens") {
        $dom = new DOMDocument;
        $dom->loadHTML($content);
        $finder = new DomXPath($dom);
        $spaner = $finder->query("//*[contains(@class, 'field-content')]");
        $content = explode(',', $spaner->item(0)->nodeValue);
    }
    //get a link to the help page
    if ($id == "title") {
        $dom = new DOMDocument;
        $dom->loadHTML($content);
        foreach ($dom->getElementsByTagName('a') as $node) {
            $content = $node->getAttribute('href');
        }
    }
    $fieldsArray[][$id] = $content;
}
$isLinkFounded = false;
$link = "";
foreach ($fieldsArray as $filed) {

    if (array_key_exists("title", $filed)) {
        $link = $filed["title"];
    }

    if (!array_key_exists("field_aide_liens", $filed)) {
        continue;
    }
    
    foreach ($filed['field_aide_liens'] as $lien) {
        if (request_uri() == $lien && $aideLien == "") {
            $aideLien = $link;
            $isLinkFounded = true;
            continue;
        }
    }
}

//if a link is not founded doesn't show anything
if (!$isLinkFounded) {
    return false;
}



