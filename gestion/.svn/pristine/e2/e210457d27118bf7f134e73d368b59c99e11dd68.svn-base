
/*********************************/
.bloc-dashboard {
	height: 275px;
	position: relative;
}

.bloc-dashboard a {
    text-decoration: none;
    display: block;
    height: 100%;
    width: 100%;
}

.blocs .blocs-content {
	padding: 5px;
}

.blocs {
    display: inline-block;
}

.bloc-titre {
	height: 66.66%;
    text-align: center;
	position: relative;
}


.bloc-text {
    height: 33.33%;
}
    
.bloc-titre-text {
    text-transform: uppercase;
    font-weight: 700;
    color: white;
	position: absolute;
    top: 75%;
    width: 100%;
}

.grise {
	color: gray !important;
}


