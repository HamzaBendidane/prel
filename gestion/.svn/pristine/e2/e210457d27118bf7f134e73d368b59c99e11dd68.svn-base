.bloc-text {
    color: white;
	padding: 1em;
}

.bloc-nb-notifications {
	width: 24px;
    height: 24px;
	font-weight: 700;
    color: white;
    text-align: center;
    padding-top: 3px;
    position: absolute;
    left: 60%;
    top: 27%;
	background : url('../images/notification.png') no-repeat center;
}

.text-line {
	position: relative;
    padding-left: 10px;
}

div .text-content-arrow {
	width: 0; 
	height: 0;
	position: absolute;
    left: 0;
    top: 4px;
	display: inline-block;
	border-left: 5px solid;
	border-right: 5px solid transparent;
	border-bottom: 5px solid transparent;
	border-top: 5px solid transparent;
}

.bloc-text-cross {
    font-weight: 700;
	color: white;
    font-size: 15px;
    position: absolute;
    width: 35px;
    height: 35px;
    text-align: center;
    line-height: 35px;
    bottom: 0;
    right: 0;
    margin-right: 0;
}


/* BLOC BLANC */
.bloc-dashboard.blanc {
	border: 1px solid #196681;
}

.bloc-text-haut {
	color: #d54015;
    font-size: 21px;
    font-weight: 600;
    height: 40%;
}


.blanc .bloc-content {
	height: 100%;
	padding: 25px;
}

.blanc .bloc-liens {
	color: #196681;
    font-size: 18px;
    background: url('../images/orangearrow.png') no-repeat 0px 5px;
    padding-left: 15px;
}

