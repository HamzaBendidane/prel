/* afiichage des pictogrammes */
.img-dossier {
	background : url('../images/pictodossier.png') no-repeat center;
}

.img-croissance {
	background : url('../images/pictocroissance.png') no-repeat center;
}

.img-agraphe {
	background : url('../images/pictoagraphe.png') no-repeat center;
}

