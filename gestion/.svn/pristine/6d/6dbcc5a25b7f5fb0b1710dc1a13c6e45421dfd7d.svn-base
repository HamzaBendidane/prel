.zone-top-header .region-top-menu .menu-name-menu-top-menu ul li a {
    color:#000;
}

.zone-top-header .content { color:000; }

.header_mobile {
    display: none;
}

.front .view-diaporama-homepage:before, .front .view-diaporama-homepage:after {
    display: none;
}

.front .view-diaporama-homepage .views-slideshow-controls-top .views-row-first, .front .view-diaporama-homepage .views-slideshow-controls-top .views-slideshow-controls-text span.views-slideshow-controls-text-previous {
    display: none;
}

.views-slideshow-controls-top {
    cursor: pointer;
    position: absolute;
    left: 50%;
    margin-left: 388px;
    bottom: 0;
    width: 92px;
    height: 92px;
    background: white url("../images/2015/header/ico-arrow-next-off.png") no-repeat center center;
    @include single-transition(all, .2s, ease-out);
    z-index: 20;

    &:hover {
        background-image: url("../images/2015/header/ico-arrow-next-on.png");
    }
}

#section-header {
    width: 100%;
    max-width: 100%;
    border: none;

    #region-full-header {
        padding: 0;
        margin: 0;
    }

    .zone-full-header {
        width: 100%;
    }

    .container-24 .grid-1 {
        width: 100%;
    }

    .header_full, .header_mobile {
        .slider {
            background-color: #009ddf;
            position: relative;
            width: 100%;
            height: 660px;
            overflow: hidden;
            z-index: 0;

            .views_slideshow_cycle_main.views-slideshow-cycle-main-frame-row {
                height: 660px;
            }

            .views_slideshow_cycle_main {
                height: 660px;
            }

            .views_slideshow_cycle_main .views-slideshow-cycle-main-frame {
                height: 660px;
            }

            .view-diaporama-homepage .views-field-title-1 {
                position: absolute;
                width: 460px;
                top: 260px;
                left: 50%;
                margin-left: -480px;
            }

            .view-diaporama-homepage .views-field-title-1 .slider-sstitre {
                background-color: transparent;
                padding-left: 24px;
                margin-bottom: 12px;

                a {
                    @include amaranth-italic(30px, 30px);
                    color: #ffffff;
                }
            }

            .view-diaporama-homepage .views-field-title-1 .slider-titre {
                padding-left: 24px;
                background-color: transparent;

                a {
                    color: #ffffff;
                    @include clearface-gothic-bold(55px, 55px);
                }
            }

            .view-diaporama-homepage .views-slideshow-controls-bottom {
                position: absolute;
                bottom: 0;
                left: 50%;
                margin-left: -480px;
                width: 480px;
                height: 92px;
                background-color: white;
                padding-left: 52px;
            }

            #widget_pager_bottom_diaporama_homepage-block {
                display: inline-block;
                margin: 39px 0 0 0;
                padding: 0;
                height: 14px;
            }

            .views-slideshow-pager-field-item .views_slideshow_pager_field_item {
                width: 14px;
                height: 14px;
                margin: 0;
            }

            .view-diaporama-homepage .views-slideshow-controls-bottom .views-content-counter {
                @include border-radius(50%);
                width: 14px;
                height: 14px;
                background-color: #d5d5d5;
                @include single-transition(all, .2s, ease-out);
                margin-right: 0;
                background-image: none;
                margin-left: 14px;

                &:hover {
                    background-color: #009ddf;
                }
            }

            .view-diaporama-homepage .views-slideshow-controls-bottom .active .views-content-counter {
                background-color: #009ddf;
                background-image: none;
            }

            .slider-plus {
                position: absolute;
                width: 41px;
                height: 41px;
                top: 190px;
                left: 50px;

                a {
                    display: block;
                    width: 100%;
                    height: 100%;
                    background: transparent url("../images/2015/header/ico-more-off.png") no-repeat left top;
                    @include single-transition(all, .2s, ease-out);
                    overflow: hidden;
                    text-indent: 110%;

                    &:hover {
                        background-image: url("../images/2015/header/ico-more-on.png");
                    }
                }
            }
        }
    }

    .header_full {
        width: 100%;

        .main_menu_ipad {
            display: none;
        }

        .encart_top {
            position: fixed;
            background-color: #ffffff;
            width: 960px;
            height: 140px;
            z-index: 60;
            top: 0;
            overflow: hidden;
            left: 50%;
            margin-left: -480px;

            .logo_min {
                position: absolute;
                z-index: 1;
                width: 32px;
                height: 33px;
                background: transparent url("../images/2015/header/ico-circle.jpg") no-repeat center center;
                left: 30px;
                top: 14px;
                @include opacity(0);
                //@include autoAlpha(0);
            }

            .logo {
                padding-left: 26px;
                padding-top: 27px;

                a {
                    width: 300px;
                }
            }

            .menu_top_right {
                position: absolute;
                top: 0;
                right: 0;
                width: 320px;
                height: 28px;
                background-color: #009ddf;

                ul {
                    line-height: 28px;
                    text-align: center;

                    li {
                        display: inline-block;
                        vertical-align: middle;
                        margin-left: 36px;

                        a {
                            color: white;
                            font-size: 10px;
                            @include avant-garde-demi(10px, 10px);
                            text-decoration: none;
                            text-transform: uppercase;

                            &:hover {
                                text-decoration: underline;
                            }
                        }

                        &:first-child {
                            margin-left: 0;
                        }
                    }
                }
            }

            a.espace_decla {
                position: absolute;
                width: 280px;
                height: 44px;
                background-color: #ffffff;
                border: 1px solid #009ddf;
                @include avant-garde-bold(15px, 44px);
                text-align: center;
                color: #009ddf;
                text-decoration: none;
                text-transform: uppercase;
                right: 40px;
                top: 63px;
                left: auto;
                margin-left: 0;

                &:after {
                    content: "";
                    position: absolute;
                    width: 15px;
                    height: 20px;
                    background: transparent url("../images/2015/header/ico-arrow-down.png") no-repeat left top;
                    right: -7.5px;
                    top: 50%;
                    margin-top: -10px;
                    z-index: 1;
                    @include single-transition(all, .2s, ease-out, .2s);
                }

                &.selected, &:hover {
                    background-color: #009ddf;
                    color: white;
                    @include single-transition(all, .2s, ease-out, .2s);

                    &:after {
                        @include autoAlpha(0);
                        @include single-transition(all, .2s, ease-out);
                    }
                }
            }
        }

        .menu_espace_decla {
            position: fixed;
            top: 140px;
            left: 50%;
            margin-left: -480px;
            width: 960px;
            height: 0;
            z-index: 100;
            text-align: center;
            line-height: 88px;
            //@include single-transition(all, .2s, ease-out);
            overflow: hidden;

            .background {
                background-color: #ffffff;
                position: relative;
                width: 960px;
                height: 92px;
            }

            .inner_menu_espace_decla {
                background-color: #009ddf;
                position: absolute;
                width: 100%;
                height: 0;
                top: 0;
                left: 0;
                overflow: hidden;
                //@include single-transition(all, .2s, ease-out, .2s);
            }

            .picto {
                display: inline-block;
                vertical-align: middle;
                width: 25px;
                height: 19px;
                background: transparent url("../images/2015/header/ico-people.png") no-repeat left top;
            }

            .close {
                margin-left: 54px;
                display: inline-block;
                vertical-align: middle;
                width: 15px;
                height: 15px;
                background: transparent url("../images/2015/header/ico-cross.png") no-repeat left top;
                overflow: hidden;
                text-indent: 110%;
            }

            .view-id-bloc_espace_declaration {
                display: inline-block;
                vertical-align: middle;
                margin-left: 50px;

                .field-label-hidden:first-child {
                    display: none;
                }

                .field-item {
                    display: inline-block;
                    vertical-align: middle;
                    padding: 0 60px;
                    border-left: 1px solid rgba(255, 255, 255, .5);

                    a {
                        color: #ffffff;
                        @include amaranth-italic(18px, 18px);
                        height: 28px;
                        margin-top: 10px;

                        &:hover {
                            background: transparent url("../images/2015/header/ico-hover.png") no-repeat left 24px;
                        }
                    }

                    &:first-child {
                        padding-left: 0;
                        border: none;
                    }
                }

                .odd + .even {
                    padding-right: 0;
                }
            }
        }

        div.main_menu {
            position: absolute;
            top: 660px;
            left: 50%;
            margin-left: -480px;
            width: 960px;
            height: 92px;
            background-color: #009ddf;
            z-index: 50;
            text-align: center;
            line-height: 92px;
            overflow: hidden;

            .line {
                position: absolute;
                width: 10px;
                height: 4px;
                background-color: white;
                top: 66px;
                left: 38px;
                @include single-transition(all, .3s, ease-in-out);
            }

            ul {
                text-align: center;
                position: relative;
                top: 0;
                left: 0;
                @include single-transition(all, .5s, ease-in-out);

                li {
                    display: inline-block;
                    vertical-align: middle;
                    /*margin: 0 26px;*/

                    a {

                        span {
                            padding: 0 26px;
                            display: inline-block;
                            border-left: 1px solid rgba(255, 255, 255, .5);
                            @include avant-garde-bold(16px, 16px);
                            color: white;
                        }

                        &:hover {
                            //background: transparent url("../images/2015/header/ico-hover.png") no-repeat 26px 66px;
                        }
                    }

                    &:first-child {
                        padding-left: 0;
                        margin-left: 0;

                        a {
                            background-position: 0 66px;

                            span {
                                padding-left: 0;
                                border: none;
                            }
                        }
                    }

                    &.search {
                        width: 50px;
                        height: 50px;
                        line-height: 44px;
                        padding-left: 26px;
                        cursor: pointer;
                        background: transparent url("../images/2015/header/menu-sep.png") no-repeat left center;

                        span {
                            display: inline-block;
                            vertical-align: middle;
                            background: transparent url("../images/2015/header/ico-search.png") no-repeat left top;
                            width: 20px;
                            height: 20px;
                        }
                    }
                }
            }

            div.search {
                overflow: hidden;
                width: 876px;
                height: 92px;
                position: absolute;
                z-index: 10;
                top: 0;
                left: 960px;
                @include single-transition(all, .5s, ease-in-out);

                form {
                    line-height: 92px;

                    .form-item {
                        float: left;
                    }

                    input[type="text"] {
                        display: block;
                        margin: 5px 0 0 0;
                        width: 395px;
                        height: 82px;
                        background-color: #FFF;
                        border: none;
                        @include avant-garde-bold(20px, 82px);
                        color: #009ddf;
                        padding: 0 30px;
                        @include border-radius(0);
                    }

                    input[type="submit"] {
                        float: left;
                        width: 44px;
                        height: 44px;
                        @include border-radius(50%);
                        background-color: white;
                        @include avant-garde-bold(16px, 40px);
                        color: #009ddf !important;
                        text-align: center;
                        box-shadow: none;
                        margin: 25px 0 0 24px;
                        padding: 0;
                        border: 2px solid white;
                        @include single-transition(all, .2s, ease-out);

                        &:hover {
                            background-color: #009ddf;
                            color: white !important;
                        }
                    }
                }

                .close {
                    position: absolute;
                    top: 50%;
                    margin-top: -7.5px;
                    right: 43px;
                    width: 15px;
                    height: 15px;
                    background: transparent url("../images/2015/header/ico-cross.png") no-repeat left top;
                    overflow: hidden;
                    text-indent: 110%;
                }

            }
        }

    }
}

.front {
    .views_slideshow_cycle_main .field-content, .views-field-field-slider-homepage-image, .views-slideshow-cycle-main-frame-row-item, .views_slideshow_cycle_main .views-slideshow-cycle-main-frame-row {
        height: 660px !important;
        position: relative;

        img {
            position: absolute;
            left: 50%;
            width: auto !important;
            max-width: none !important;
            height: 660px !important;
            margin-left: -842.5px;
        }
    }
}

.not-front {

    .header_full {

        .slider {
            display: none;
        }
    }

    #section-header .header_full div.main_menu {
        position: fixed;
        top: 140px;
    }

    #zone-content {
        background-color: white;
    }
}