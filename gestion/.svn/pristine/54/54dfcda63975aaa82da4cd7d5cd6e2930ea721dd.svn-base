.synthese, .justificatif, .justificatif_paiement {
  border-radius: 5px 5px 0 0;
  border: solid;
  border-width: 1px 1px 0 1px;
  text-align: center;
  padding:1%;
  margin-left: 2px;
  width: 33%;
}

.active {
/*   border-bottom: 0; */
  background-color: #196681;
  padding-bottom: 11px;
}

.active a {
  color: #FFF !important;
}

.tab-title {
  margin-top: 2%;
  text-align: center;
}

.fenetre {
  width: 99.5%;
  border: solid 1px;
  margin-top: -1px;
  margin-left: 2px;
  padding: 2%;
}

.upper-bold {
  text-transform: uppercase;
  font-weight: bold;
}

.underline {
  border-bottom: solid 1px #CDE3F1;
}

@media screen and (max-width:1024px) {
    .fenetre {
      width: 99.6%;
    }
    .synthese, .justificatif, .justificatif_paiement {
      margin-top: 2px;
      padding:1.2%;
    }
}
button.synthese-edit a{
    color: #196681 !important;
}