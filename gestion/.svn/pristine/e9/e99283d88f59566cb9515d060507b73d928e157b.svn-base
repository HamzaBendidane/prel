<?php

/**
 * INCLUDES LANGS & VALIDATIONS
 *
 */
function _dgf_justificatif_paiement_require_once() {
  require_once 'justificatif_paiement_db.inc';
  require_once 'justificatif_paiement_submit.inc';
}

/**
 *  FICHIERS CSS & JS
 *
 */
 function _dgf_justificatif_paiement_include_js_css() {
  drupal_add_js(drupal_get_path('module', 'dgf_visualisation_finale' ) . '/inc/justificatif_paiement/js/justificatifs_paiement.js' );
//   drupal_add_css(drupal_get_path('module', 'dgf_visualisation_finale' ) . '/inc/justificatif/css/justificatifs.css' );
}

/**
 *  FORMULAIRE D'UPLOAD DE FICHIERS
 *  @param : $form   et  &$form_state
 *
 */
function dgf_justificatif_paiement_form($form,&$form_state) {

  _dgf_justificatif_paiement_require_once();

  _dgf_justificatif_paiement_include_js_css();

  // on regarde le 3eme argument de l'url pour retrouver s'il y a des données
  $temp_dgf_form_justificatif_paiement = array();
  // s'il est rempli, on récupère les informations de la bdd
  if (arg(2) !== null) {
    $id_dgf = arg(2);
    $temp_dgf_form_justificatif_paiement = justificatif_db_get_temp_dgf_form_justificatif_paiement($id_dgf);
  } else {
    return;
  }
  //______________________________ Step 1: Choix des pièces à fournir  _____________________________ //

  $form['paiement']['steps1'] = array(
      '#type' => 'markup',
      '#markup' =>  '<div class="row"><h3><span class="num">1</span> ' . t(@J_FILE_SELECT) . '</h3></div>',
  );
  // Contient les valeurs à afficher
  $render = _dgf_justificatif_paiement_html($form_state, $id_dgf, $temp_dgf_form_justificatif_paiement);

  // Listes des pièces à joindre
  $form['paiement']['convention']['listes'] = array(
      '#type' => 'markup',
      '#markup' =>  $render,
  );

  $form['paiement']['convention']['id_dgf'] = array(
      '#type' => 'hidden',
      "#default_value" => $id_dgf
  );

  // UPLOAD FICHIER
  $form['paiement']['convention']['id_ref_file'] = array(
      '#type' => 'hidden',
  );

  //______________________________ Step 2: Upload des fichiers  _________________________________ //

  $form['paiement']['convention']['infos_find'] = array(
      '#type' => 'markup',
      '#markup' =>  '<div class="row"><h3><span class="num">2</span> ' . t(@J_FILE_FIND) . '</h3></div>',
  );

  $form['paiement']['convention']['infos_plus'] = array(
      '#type' => 'markup',
      '#markup' =>  '<div class="row"><b>' . t(@J_FILE_FORMAT) . '</b></div>',
  );

  $form['paiement']['convention']['file_to_upload'] = array(
      '#type' => 'file',
      '#title' => t('Fichier à joindre'),
      '#title_display' => 'invisible',
      '#size' => 60,
//       '#description' => t(@J_FILE_BROWSE),
      '#attributes'  => array('class' => array('cssfile edit-file-to-upload')),
      '#upload_validators' => array(
          'file_validate_size' => array(1024*1024),
          'file_validate_extensions' => array('gif jpg jpeg'),
       )
  );


  $form['paiement']['convention']['infos_warning'] = array(
      '#type' => 'markup',
      '#markup' =>  '<div id="limit-size" class="row"><b>' . t(@J_INFOS_WARNING) . '</b></div>',
  );

  //______________________________ Step 3: Bouton envoyer  _________________________________ //

  $form['paiement']['convention']['infos_join'] = array(
      '#type' => 'markup',
      '#markup' =>  '<div class="row"><h3><span class="num">3</span> ' . t(@J_FILE_CLIC) . '</h3></div>',
  );
  $form['convention']['join_file'] = array(
      '#type' => 'submit',
      '#value' => t('JOINDRE LA PIECE'),
      '#validate' =>  array(
          'dgf_justificatifs_form_standard',
          'dgf_justificatifs_form_specific'
      ),
      '#submit' =>  array('dgf_justificatif_paiement_form_submit_file'),

      '#attributes' => array('class' => array('btn btn-primary edit-join-file')),
  );

  // Affiche le tableau des résults
  $form['convention']['result'] = array(
  '#type' => 'markup',
  '#markup' => _dgf_justificatif_paiement_results($id_dgf),
  );

  // utilisation de la modal générique
  $form['paiement']['clearfix'] = array(
  '#type' => 'markup',
  '#markup' => '<div class="clearfix"></div>',
  );

  return $form;
}



/**
 * Gère les champs obligatoires et complémentaires
 *
 */
function _dgf_justificatif_paiement_html($form_state, $id_dgf, $temp_dgf_form_justificatif_paiement) {
 // on récupère les réfs justificatifs de cette demande (on récupère la nature de demande correspondante)
  $ref_justificatifs = justificatif_paiement_db_get_ref_justificatif_paiement($id_dgf, $temp_dgf_form_justificatif_paiement);
   $saisieOrganisme = organisme_formation_db_get_temp_dgf_form_organisme_formation($id_dgf);
  // On construit notre html
  $justificatifs_mandatory = '';
  $justificatifs_complementary = '';
  if ($ref_justificatifs) {
    $justificatifPresent= justificatif_paiement_db_get_form($id_dgf);
    $listeJustificatifs=array();
    foreach ($justificatifPresent as $piece) {
      $listeJustificatifs[]=$piece->t_nom_ref_fichier;
    }
    foreach ($ref_justificatifs as $justificatif) {
      if (!(in_array($justificatif->label, $listeJustificatifs))) {
        if (!$saisieOrganisme['evaluation_preformative'] && $justificatif->id ==5) continue;

        if (isset($form_state['input']['id_ref_file']) && $form_state['input']['id_ref_file'] == $justificatif->id) {
          $classSelected = 'select';
        } else {
          $classSelected = '';
        }
        if ($justificatif->is_mandatory) {
          $justificatifs_mandatory .= '<li id="'.$justificatif->id.'" class="justif-select '.$classSelected.'">'
              .$justificatif->label.'<span class="required">*</span></li>';
        } else {
          $justificatifs_complementary .= '<li id="'.$justificatif->id.'" class="justif-select '.$classSelected.'">'
              .$justificatif->label.'</li>';
        }
      }
    }
  }

  $justif_required = "<div class='col-lg-6'>
  <p>Type de pièce(s) à joindre <b>impérativement</b></p>
  <ul class='list-unstyled justifs'>
  $justificatifs_mandatory
  </ul>
  </div>";
  $justif_comp = "<div class='col-lg-6'>
  <p>Type de pièce(s) complémentaires éventuelles</p>
  <ul class='list-unstyled justifs-complements'>
  $justificatifs_complementary
  </ul>
  </div>";

  $html = "<div class='row'>";
  $html .= $justif_required;
  $html .= $justif_comp;
  $html .= "</div>";

  return $html;
}


/**
 *  Gère l'affichage des fichiers d'upload
 *
 *
 */
function _dgf_justificatif_paiement_results($id_dgf) {


  $dgf_form_justificatif = justificatif_paiement_db_get_form($id_dgf);
  // TODO : utiliser un fichier template !
  $html  = '<table id="listfiles" class="table table-condensed small-margin-top">';
  $html .= '<thead>';
  $html .= '<th>Type de la pièce jointe</th>';
  $html .= '<th class="center">Nom du fichier</th>';
  $html .= '<th class="center"></th>';
  $html .= '</thead>';
  $html .= '<tbody>';
  if ($dgf_form_justificatif) {
    foreach ($dgf_form_justificatif as $just) {

      if($just->is_delete == 0){
        // Gestion du lien document
        $link_doc =  variable_get('file_public_path', conf_path() . '/files/opcaim').$just->t_repertoire_fichier. $just->t_nom_fichier;
        $link_doc = l($just->t_nom_fichier, $link_doc, array('html' => false));
        // Gestion du lien supprimer
        $image_sup = theme_image(array(
            'path' =>  base_path().drupal_get_path('theme', 'opcaim' ).'/images/delete.png',
            'title' => 'Supprimer',
            'attributes' => array()
        ));
              $link_sup = l($image_sup, '/dgf/visualisation/'.$just->id_dgf.'/supPaiement/'.$just->id.'/'.$just->t_nom_ref_fichier, array('html' => true));
        // Affichage du html
        $html .= '<tr id="res">';
        $html .= '<td class="types">'.$just->t_nom_ref_fichier.'</td>';
        $html .= '<td align="center">'.$link_doc.'</td>';
        $html .= '<td align="center">'.$link_sup.'</td>';
        $html .= '</tr>';
      }

    }
  }
  $html .= '</tbody>';
  $html .= '</table>';

  return $html;
}

function justificatifs_paiement_delete_files($id_dgf, $id_justificatif,$nom) {
  _dgf_justificatif_paiement_require_once();

  // supprimer le document du serveur
  $dgf_form_justificatif_paiement = justificatif_db_get_temp_dgf_form_justificatif_paiement($id_dgf, $nom);

  drupal_unlink(DEFAULT_FILE_PATH.$dgf_form_justificatif_paiement['t_repertoire_fichier'].$dgf_form_justificatif_paiement['t_nom_fichier']);

//   // supprimer la ligne de la bdd
  justificatif_paiement_db_delete_temp_dgf_form_justificatif_paiement($nom);
  drupal_set_message(t("Le fichier ".$dgf_form_justificatif_paiement['t_nom_fichier']." a bien été supprimé."));
  drupal_goto('/dgf/visualisation/'.$id_dgf . '/justifs');

}