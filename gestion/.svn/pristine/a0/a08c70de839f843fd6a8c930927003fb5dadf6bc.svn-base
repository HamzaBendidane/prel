.page-user,
.page-user-editeur {

    #edit-field-roles {
        border-bottom: 0;
    }

    #edit-account {
        padding: 0 !important;

        .form-type-password {
            padding: 0 !important;
            width: 810px !important;
            max-width: 100% !important;

          &.form-item-current-pass {
            padding: 0 70px !important;
            width: 100% !important;

            input {
              width: 100% !important;
            }
          }

            #edit-pass-pass1, input[type="password"], label {
                display: block !important;
                float: none !important;
                width: 810px !important;
                max-width: 100% !important;
            }
        }
    }

    .form-item input[type="checkbox"] {
        display: inline-block;
        width: auto;
    }

    .form-item input[type="checkbox"] + label {
        display: inline-block;
        vertical-align: middle;
        background: white url("../images/2015/media/background-check.png") no-repeat left center;
        width: 500px;
        height: 20px;
        @include avant-garde-demi(15px, 15px);
        color: #a3a3a3;
        padding-left: 40px;
        padding-top: 3px;
    }

    .form-item input[type="checkbox"]:checked + label {
        background: white url("../images/2015/media/ico-check-on.png") no-repeat left center;
    }

    #edit-actions {
        margin: 30px 0;
    }

    #test {
        display: inline-block;
        margin: 0 20px;
        background-color: #FF0000;
        padding: 20px 0;
        background-size: cover;
    }
}

.form-type-password-confirm .form-item-pass-pass1 {
    display: block;
}