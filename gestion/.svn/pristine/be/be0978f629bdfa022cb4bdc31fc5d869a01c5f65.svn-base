<div id ="historique">
  <h3>Historique des relances</h3>
    <fieldset class="form-wrapper row ">
    <div id="relances">
    <ul>
    <?php 
    if(empty($historique)) {
      print ('<p>Aucune relance n\'a été envoyée</p>');
    }
    foreach ($historique as $histo) {
      ?>
            <li>
      <?php
      $historique_html="";
      $date = new DateTime($histo['relance']['date_creation']);
      $fichier_comp =substr($histo['relance']['fichier_comp'],stripos($histo['relance']['fichier_comp'],"/sites"));

      $historique_html='<strong>';
        $historique_html .='Le '.$date->format('d-m-Y H:i').
            ' : envoi de '.$histo['relance']['mode_envoi'];
        if(!empty($histo['destinataire'][0]['id_contact'])){
          $historique_html.=' à '.$histo['destinataire'][0]['id_contact']['last_name'].' '
             .$histo['destinataire'][0]['id_contact']['first_name'].'';
        } else {
          $historique_html.=' à '.$histo['destinataire'][0]['autre_mail'];
        }
        $historique_html.='</strong>';
        if(!empty($histo['justificatif'])){
          $historique_html.='<strong>';
          $historique_html.='<p> Pièces manquantes </p>';
          $historique_html.='</strong> <ul>';
          
          foreach ($histo['justificatif'] as $justif) {
            $historique_html.='<li>'.$justif['label'].'</li>';
          }
          $historique_html.='</ul>';
        } 
        if($histo['relance']['commentaire']!=""){
          $historique_html.='<strong>';
          $historique_html.='<p>Informations manquantes</p> ';
          $historique_html.='</strong>';
          $historique_html.= '<p> '.$histo['relance']['commentaire'].'</p>';
          $historique_html.= '<p> <a href='.$fichier_comp.'> Fichier complémentaire</a></p>';
        }
        $historique_html.='</br>';
        print ($historique_html);
        ?>
    </li>
      <?php
    }
?>
      </ul>
    </div>
    </fieldset>
</div>