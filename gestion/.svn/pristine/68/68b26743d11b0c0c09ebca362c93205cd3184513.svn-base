<?php

function document_settings_form($form, &$form_state) {
  $form = array();

  $form['texte_annonces'] = array(
    '#type' => 'textarea',
    '#title' => t('Texte annonces'),
    '#default_value' => variable_get('texte_annonces', ''),
  );

  $form['texte_bannieres'] = array(
    '#type' => 'textarea',
    '#title' => t('Texte banniÃ¨res'),
    '#default_value' => variable_get('texte_bannieres', ''),
  );

  $form['texte_document'] = array(
    '#type' => 'textarea',
    '#title' => t('Surtitre'),
    '#default_value' => variable_get('texte_document', ''),
  );

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
  );

  return $form;
}

function document_settings_form_submit($form, &$form_state) {

  variable_set('texte_annonces', $form_state['values']['texte_annonces']);
  variable_set('texte_bannieres', $form_state['values']['texte_bannieres']);
  variable_set('texte_document', $form_state['values']['texte_document']);

  drupal_set_message(t('Your configuration has been saved.'));

}