#view-mediatheque {
    position: relative;
    padding: 70px 0 0 70px;

    .title-mediatheque {
        display: none;
    }

    h1 {
        text-transform: none;
        color: #5c656d;
        border: none;
        margin: 0;
        letter-spacing: 0.01em;
        @include avant-garde-bold(50px, 50px);

        &:after {
            display: none;
        }
    }

    .filters-search-range {
        margin-top: 34px;

        .label_search {
            display: block;
            text-align: left;
            @include avant-garde-bold(20px, 20px);
            color: $blue;
        }

        .search_submit {
            margin-top: 30px;
            overflow: hidden;
            width: 570px;
            height: 92px;
            position: relative;
            background: #009ddf url("../images/2015/header/ico-search.png") no-repeat 40px center;

            .form-item {
                float: left;
            }

            input[type="text"] {
                display: block;
                margin: 5px 0 0 100px;
                width: 378px;
                height: 82px;
                background-color: #FFF;
                border: none;
                @include avant-garde-bold(20px, 82px);
                color: #009ddf;
                padding: 0 30px;
                @include border-radius(0);
            }
        }

        input[type="submit"] {
            float: left;
            width: 44px;
            height: 44px;
            @include border-radius(50%);
            background-color: white;
            @include avant-garde-bold(16px, 40px);
            color: #009ddf !important;
            text-align: center;
            box-shadow: none;
            margin: 24px 0 0 24px;
            padding: 0;
            border: 2px solid white;
            @include single-transition(all, .2s, ease-out);

            &:hover {
                background-color: #009ddf;
                color: white !important;
            }
        }

        .media-filters {
            background-color: white;
            padding: 0;
            margin: 60px 0 0 0;

            .label-filters {
                padding: 0;
                margin: 0;
                display: block;
                text-align: left;
                @include avant-garde-bold(20px, 20px);
                color: $blue;
            }

            .form-wrapper, .form-item.form-type-checkbox, #edit-account.form-wrapper .form-item, .webform-container-inline {
                padding: 0 !important;
            }

            .form-item.form-type-checkbox {
                width: 250px;
                overflow: hidden;
            }

            .filters-items input[type="checkbox"] + label {
                display: inline-block;
                vertical-align: middle;
                background: white url("../images/2015/media/background-check.png") no-repeat left center;
                width: 250px;
                height: 20px;
                @include avant-garde-demi(15px, 15px);
                color: #a3a3a3;
                padding-left: 40px;
                padding-top: 3px;
            }

            .filters-items input[type="checkbox"]:checked + label {
                background: white url("../images/2015/media/ico-check-on.png") no-repeat left center;
            }
        }
    }

    .media-filters .filters-items .filters-taxo, .media-filters .filters-items .filters-assets, .media-filters .filters-items .filters-search-range {
        width: 250px;
    }

    .filters-order {
        text-align: left;
        border: none;

        &:after {
            display: none;
        }

        .nb-results {
            float: none;
            @include avant-garde-bold(40px, 40px);
            color: #5c656d;
            margin: 30px 0;
            padding: 40px 0 0 0;
            background: transparent url("../images/2015/page/sidebar-title-blue-sep.png") no-repeat left top;
        }

        a.order {
            background: transparent url("../images/2015/page/ico-select-down.png") no-repeat 10px center;
            padding-left: 40px;
            @include avant-garde-bold(14px, 14px);
            color: #a3a3a3;
            border: none;
        }
    }

    .results-medias {

        .result-row {
            margin-top: 50px;
            padding: 0;
            border: none;
            width: 100%;

            &:first-child {
                margin-top: 0;
            }

            .type-perm-result {
                background-color: white;
                float: left;
                width: 50%;
                height: 50px;
                @include amaranth-italic(25px, 25px);
                color: #c1c1c1;
                padding-left: 30px;
            }

            .date-perm-result {
                float: left;
                width: 50%;
                background-color: white;
                height: 50px;

                .date-result {
                    width: 100%;
                    text-align: right;
                    @include amaranth-italic(25px, 25px);
                    color: $blue;
                    padding-right: 30px;
                    text-transform: none;
                }
            }

            .title-teaser-result {
                width: 100%;
            }

            .title-result {
                display: table;
                background-image: url("../images/2015/home/ico-more-white-off.png");
                background-repeat: no-repeat;
                background-position: 94% center;
                width: 100%;
                height: 92px;
                background-color: #009ddf;
                line-height: 92px;
                position: relative;
                padding: 0 30px;
                color: white;
                @include avant-garde-bold(20px, 22px);
                margin: 0;

                p {
                    padding-right: 100px;
                    line-height: normal;
                    display: table-cell;
                    vertical-align: middle;
                }

                .essentials {
                    position: absolute;
                    width: 35px;
                    height: 35px;
                    background: transparent url("../images/2015/media/ico-star.png") no-repeat left top;
                    right: 85px;
                    top: 28px;
                }
            }

            .teaser-result {
                display: table;
                margin: 0;
                background: white url("../images/2015/media/background-paper.png") repeat left top;
                width: 100%;
                min-height: 92px;
                @include open-sans-semi-bold(14px, 20px);
                color: #656565;
                padding: 30px;

                p {
                    line-height: normal;
                    display: table-cell;
                    vertical-align: middle;
                }
            }

            .not-allowed {
                .title-result {
                    background-image: url("../images/2015/media/ico-lock.png");
                }
            }
        }
    }
}

.media-filters .filters-items input[type="checkbox"] {
    display: block;
    position: absolute;
    left: -9999px;
}

