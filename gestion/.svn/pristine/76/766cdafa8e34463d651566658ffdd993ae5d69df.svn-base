.wrap {
    margin: 0 auto;
    position: relative;
    padding: 0;
    width: 996px;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.cb {
    clear: both;
}

* {
    @include box-sizing(border-box);
}

a:focus, a:active, input:focus { outline: none; }
a, a img {border:none;}

input[type="text"], input[type="password"], textarea, input[type="submit"] {
    -webkit-appearance: none;
    border-radius: 0;
}


