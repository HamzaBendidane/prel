#zone-slider-wrapper
{
    display: none;
}

#zone-logo-search-wrapper {
    display: none;
}

#zone-menu-wrapper {
    display: none;
}

#zone-content-wrapper {
    padding-top: 92px;
}

.hp_first_content {
    //overflow: hidden;

    .hp_top_left {
        float: left;
        height: 402px;
        overflow: hidden;
        width: 480px;
        position: relative;

        a {
            display: block;

            .accroche {
                position: absolute;
                display: table;
                left: 0;
                bottom: 0;
                width: 480px;
                height: 92px;
                background-color: #009ddf;
                line-height: 92px;
                padding: 0 30px;

                p {
                    display: table-cell;
                    vertical-align: middle;
                    color: white;
                    @include avant-garde-bold(20px, 24px);
                    width: 360px;
                }

                .more {
                    position: absolute;
                    right: 30px;
                    top: 50%;
                    height: 41px;
                    width: 41px;
                    margin-top: -20.5px;
                    background: transparent url("../images/2015/home/ico-more-white-off.png") no-repeat left top;
                    @include single-transition(all, .2s, ease-out);
                }
            }

            &:hover {
                .more {
                    background-image: url("../images/2015/home/ico-more-white-on.png");
                }
            }
        }
    }

    .hp_top_center {
        float: left;
        height: 402px;
        width: 240px;
        overflow: hidden;
        position: relative;

        .top {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 1;
            padding: 30px;

            h3 {
                @include avant-garde-bold(40px, 40px);
                background: transparent url("../images/2015/page/sidebar-title-green-sep.png") no-repeat left bottom;
                padding-bottom: 16px;
                color: $blue;
                letter-spacing: 0.01em;
            }

            p {
                margin-top: 16px;
                @include avant-garde-bold(20px, 24px);
                color: $blue;
            }
        }
    }

    .hp_top_right {
        float: left;
        height: 402px;
        width: 240px;
        overflow: hidden;
        position: relative;

        .top {
            position: absolute;
            padding: 30px 0 0 30px;
            width: 100%;
            height: 100%;
            @include background-image(linear-gradient(to top, rgba(0, 0, 1, 0.25) 0%, rgba(1, 146, 208, 0) 100%));
            background-color: rgba(10, 113, 105, 0.4);
        }

        h3 {
            @include amaranth-italic(30px, 30px);
            color: white;
            width: 180px;
        }

        h2 {
            color: white;
            @include avant-garde-bold(30px, 30px);
            width: 180px;
            margin-top: 44px;
        }

        .accroche {
            color: white;
            @include avant-garde-bold(16px, 22px);
            width: 180px;
            margin-top: 24px;
        }

        .encart {
            position: absolute;
            width: 100%;
            height: 92px;
            z-index: 4;
            left: 0;
            bottom: 0;
            background-color: #6ed4cc;
            text-align: center;

            .decouvrir {
                display: inline-block;
                vertical-align: middle;
                position: relative;
                margin-top: 24px;
                width: 150px;
                height: 44px;
                background-color: #6ed4cc;
                border: 1px solid #cef0ee;
                @include avant-garde-bold(15px, 44px);
                text-align: center;
                color: #ffffff;
                text-decoration: none;
                text-transform: uppercase;
                @include single-transition(all, .2s, ease-out);
                margin-left: 0;

                &:after {
                    content: "";
                    position: absolute;
                    width: 15px;
                    height: 20px;
                    background: transparent url("../images/2015/home/ico-arrow-green-right.jpg") no-repeat left top;
                    right: -7.5px;
                    top: 50%;
                    margin-top: -10px;
                    z-index: 1;
                    @include single-transition(all, .1s, ease-out, .2s);
                }

                &.selected, &:hover {
                    background-color: white;
                    border-color: white;
                    color: #6ed4cc;
                    @include single-transition(all, .2s, ease-out, .1s);

                    &:after {
                        right: -20px;
                        @include single-transition(all, .1s, ease-out);
                    }
                }
            }
        }
    }

}


.hp_second_content {
    clear: both;

    iframe {
        display: block;
    }
}

.hp_lsv {
    background: transparent url("../images/2015/home/background-paper.png") no-repeat left top;
    width: 960px;
    height: 330px;
    padding: 55px 48px;
    position: relative;

    h3 {
        @include amaranth-italic(30px, 30px);
        color: #6ED4CC;
    }

    h2 {
        color: #009fda;
        @include clearface-gothic-bold(50px, 50px);
        margin-top: 30px;
    }

    .share {
        text-align: center;
        line-height: 44px;
        @include single-transition(backgroundImage, .2s, ease-out);
        padding-left: 10px;

        span {
            display: inline-block;
            vertical-align: middle;
            @include single-transition(color, .2s, ease-out);
        }

        .text {
            @include open-sans-bold(14px, 14px);
            text-transform: uppercase;
        }

        .ico {
            display: inline-block;
            vertical-align: middle;
            width: 19px;
            height: 18px;
            margin-left: 10px;
        }
    }

    .share.facebook {
        position: absolute;
        right: 192px;
        bottom: 58px;
        background: transparent url("../images/2015/home/background-fb-blue-off.png") no-repeat left top;
        width: 136px;
        height: 44px;

        .ico {
            background: transparent url("../images/2015/home/ico-facebook-blue-off.png") no-repeat left top;
        }

        &:hover {
            color: white;
            background-image: url("../images/2015/home/background-fb-blue-on.png") ;
            background-position: right top;

            .ico {
                background-image: url("../images/2015/home/ico-facebook-blue-on.png");
            }
        }
    }

    .share.twitter {
        position: absolute;
        right: 40px;
        bottom: 58px;
        background: transparent url("../images/2015/home/background-twitter-blue-off.png") no-repeat left top;
        width: 136px;
        height: 44px;
        color: #61abff;

        .ico {
            background: transparent url("../images/2015/home/ico-twitter-blue-off.png") no-repeat left top;
        }

        &:hover {
            color: white;
            background-image: url("../images/2015/home/background-twitter-blue-on.png") ;
            background-position: right top;

            .ico {
                background-image: url("../images/2015/home/ico-twitter-blue-on.png");
            }
        }
    }
}

