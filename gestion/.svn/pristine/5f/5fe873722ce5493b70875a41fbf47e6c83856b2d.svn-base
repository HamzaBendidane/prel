body {

    &.not-front .zone-content, &.front .zone-content {
        width: 768px !important;
        max-width: 768px !important;
        margin: 0 auto !important;
    }

    &.not-front #page #section-header .header_full .slider {
        display: none;
        margin: 0;
    }

    &.front #zone-content-wrapper {
        padding-top: 0;
    }

    #page {

        /* HEADER */
        #section-header {

            .header_full {


                /* ENCART TOP */
                .encart_top {
                    width: 768px;
                    margin-left: -384px;

                    a.espace_decla {
                        background-color: $blue;
                        color: white;

                        &:after {
                            display: none;
                        }
                    }
                }

                .menu_espace_decla {
                    width: 768px;
                    margin-left: -384px;

                    .inner_menu_espace_decla {
                        width: 768px;

                        .view-id-bloc_espace_declaration {
                            margin-left: 20px;
                        }

                        .close {
                            margin-left: 20px;
                        }

                        .view-id-bloc_espace_declaration .field-item {
                            padding: 0 20px;

                            a {
                                //font-size: 12px;
                            }
                        }
                    }
                }

                /* SLIDER */
                .slider {
                    margin-top: 140px;

                    .view-diaporama-homepage .views-field-title-1 {
                        margin-left: -384px;
                    }

                    .view-diaporama-homepage .views-slideshow-controls-bottom {
                        margin-left: -384px;
                    }

                    .views-slideshow-controls-top {
                        margin-left: 292px;
                    }
                }

                .main_menu {
                    display: none;
                }

                .main_menu_ipad {
                    position: fixed;
                    display: block;
                    width: 100%;
                    top: 140px;
                    z-index: 55;

                    .menu_contextuel {
                        display: none;
                    }

                    .menu_burger {
                        position: relative;
                        width: 768px;
                        margin: 0 auto;
                        height: 92px;
                        background-color: $blue;
                        overflow: hidden;

                        a {
                            float: left;
                            width: 92px;
                            height: 92px;
                            background: transparent url("../images/2015/header/menu-sep.png") no-repeat right center;

                            .ico {
                                display: block;
                                width: 92px;
                                height: 92px;
                                background: transparent url("../images/2015/header/ico-burger.png") no-repeat center center;
                            }
                        }

                        .ico_seach {
                            cursor: pointer;
                            float: right;
                            width: 92px;
                            height: 92px;
                            background: transparent url("../images/2015/header/menu-sep.png") no-repeat left center;

                            .ico {
                                display: block;
                                width: 92px;
                                height: 92px;
                                background: transparent url("../images/2015/header/ico-search.png") no-repeat center center;
                            }
                        }

                        div.search {
                            overflow: hidden;
                            width: 768px;
                            height: 92px;
                            position: absolute;
                            z-index: 10;
                            top: 0;
                            padding-left: 46px;
                            background-color: $blue;
                            left: 100%;

                            form {
                                line-height: 92px;

                                .form-item {
                                    float: left;
                                }

                                input[type="text"] {
                                    display: block;
                                    margin: 5px 0 0 0;
                                    width: 395px;
                                    height: 82px;
                                    background-color: #FFF;
                                    border: none;
                                    @include avant-garde-bold(20px, 82px);
                                    color: #009ddf;
                                    padding: 0 30px;
                                    @include border-radius(0);
                                }

                                input[type="submit"] {
                                    float: left;
                                    width: 44px;
                                    height: 44px;
                                    @include border-radius(50%);
                                    background-color: white;
                                    @include avant-garde-bold(16px, 40px);
                                    color: #009ddf !important;
                                    text-align: center;
                                    box-shadow: none;
                                    margin: 25px 0 0 24px;
                                    padding: 0;
                                    border: 2px solid white;
                                    @include single-transition(all, .2s, ease-out);

                                    &:hover {
                                        background-color: #009ddf;
                                        color: white !important;
                                    }
                                }
                            }

                            .close {
                                cursor: pointer;
                                position: absolute;
                                right: 0;
                                width: 92px;
                                height: 92px;
                                background: transparent url("../images/2015/header/ico-cross.png") no-repeat center center;
                                overflow: hidden;
                                text-indent: 110%;
                            }

                        }
                    }

                    .top_menu {
                        position: relative;
                        width: 768px;
                        margin: -1px auto 0 auto;
                        height: 0;
                        background-color: $blue;
                        overflow: hidden;

                        .inner_top_menu {
                            position: relative;
                            width: 100%;

                            a.back {
                                display: block;
                                float: left;
                                width: 92px;
                                height: 272px;
                                background: white url("../images/2015/header/ico-arrow-top-blue.png") no-repeat center 30px;
                            }

                            ul {
                                float: right;
                                width: 676px;
                                height: 272px;
                                padding: 44px;
                                background-color: $blue;

                                li {
                                    display: block;
                                    padding: 0;
                                    margin: 0;

                                    a {
                                        @include avant-garde-bold(16px, 36px);
                                        text-decoration: none;
                                        color: white;
                                    }
                                }
                            }

                            .bottom {
                                clear: both;
                                width: 768px;
                                height: 92px;
                                padding-left: 92px;
                                background-color: $blue;

                                .follow_us {
                                    display: table;
                                    background-color: white;
                                    width: 676px;
                                    height: 92px;
                                    line-height: 92px;
                                    padding-left: 44px;

                                    .view-content {
                                        height: 92px;
                                        line-height: 92px;

                                        div {
                                            display: inline-block;
                                            vertical-align: middle;
                                        }

                                        .view-header {
                                            @include avant-garde-bold(15px, 15px);
                                            color: #009ddf;
                                            text-transform: uppercase;
                                        }


                                        .views-row-1 {
                                            margin-left: 8px;

                                            a {
                                                display: block;
                                                background: transparent url("../images/2015/footer/ico-twitter-off.png") no-repeat left top;
                                                width: 25px;
                                                height: 26px;
                                                @include single-transition(all, .2s, ease-out);

                                                img {
                                                    display: none;
                                                }

                                                &:hover {
                                                    background-image: url("../images/2015/footer/ico-twitter-on.png");
                                                }
                                            }
                                        }

                                        .views-row-2 {
                                            margin-left: 4px;

                                            a {
                                                display: block;
                                                background: transparent url("../images/2015/footer/ico-facebook-off.png") no-repeat left top;
                                                width: 26px;
                                                height: 26px;
                                                @include single-transition(all, .2s, ease-out);

                                                img {
                                                    display: none;
                                                }

                                                &:hover {
                                                    background-image: url("../images/2015/footer/ico-facebook-on.png");
                                                }
                                            }
                                        }

                                        .views-row-3 {
                                            margin-left: 4px;

                                            a {
                                                display: block;
                                                background: transparent url("../images/2015/footer/ico-youtube-off.png") no-repeat left top;
                                                width: 25px;
                                                height: 26px;
                                                @include single-transition(all, .2s, ease-out);

                                                img {
                                                    display: none;
                                                }

                                                &:hover {
                                                    background-image: url("../images/2015/footer/ico-youtube-on.png");
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

            }
        }

        /* HOME */
        #block-ecofolio-frontpage-ecofolio-frontpage-full {
            padding-bottom: 92px;
        }

        .hp_first_content {

            .hp_top_center {
                width: 288px;

                .top {
                    padding: 30px;
                }
            }

            .hp_top_right {
                width: 288px;

                .top {
                    padding: 30px;
                }
            }
        }

        .hp_second_content {
            float: left;
            clear: none;
            width: 480px;
            height: 402px;

            iframe {
                width: 480px;
                height: 402px;
            }
        }

        .hp_lsv {
            width: 288px;
            float: left;
            padding: 30px;
            height: 402px;
            background-repeat: repeat;

            h2 {
                font-size: 32px;
                line-height: 36px;
            }

            .share.facebook {
                margin: 0;
                left: 30px;
                top: 284px;
            }

            .share.twitter {
                margin: 0;
                left: 30px;
                top: 335px;
            }
        }

        .hp_bottom_right, .hp_bottom_center {
            width: 288px;
        }

        .hp_bottom_center {
            margin-left: 192px;
        }

        /* PAGE */
        #region-sidebar-first, .grid-4.prefix-2.region.region-sidebar-first {
            width: 288px !important;

            .block-menu-block {
                padding: 30px;
            }
        }

        #region-sidebar-first .nos_dossiers, .grid-4.prefix-2.region.region-sidebar-first .nos_dossiers {
            padding: 30px;
        }

        #region-sidebar-first .bloc_decouverte, .grid-4.prefix-2.region.region-sidebar-first .bloc_decouverte {
            width: 288px;
            overflow: hidden;

            a {
                .footer_intra {
                    width: 100%;

                    p {
                        font-size: 18px;
                        line-height: 22px;
                    }

                    .more {
                        right: 25px;
                    }
                }
            }
        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block .views-field.views-field-title {
            top: 218px;
        }

        #zone-maincontent-wrapper {
            width: 480px !important;
        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block {
            width: 480px;
        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block .views-field.views-field-title {
            width: 480px;
        }

        #zone-maincontent-wrapper .views-field.views-field-title .slider-text {
            width: 480px;
        }

        #zone-maincontent-wrapper .views-field.views-field-title .slider-text .slider-accroche {
            background-position: 410px center;
            font-size: 18px;
            line-height: 22px;
        }

        #block-ecofolio-univers-ecofolio-univers-full {
            > .block-inner {
                > .content {
                    > div {
                        float: left;
                        position: relative;
                        width: 480px;
                        height: 402px;
                    }
                }
            }
        }

        #block-system-main .field-item table, #node-336 .field-item table {
            width: 340px;
        }

        #zone-content-footer-wrapper {
            width: 768px;

            .promo_left {
                display: none;
            }

            .dossier {
                width: 480px;
                float: right;
            }
        }

        /* CONTACT */
        .bloc_contact {
            width: 288px;
            padding-left: 30px;
        }

        .region-first-content .form-item textarea {
            width: 340px !important;
        }

    }

    /* MEDIA */
    &.page-mediatheque {

        #page {
            #zone-maincontent-wrapper {
                width: 768px !important;
                max-width: 100%;
            }
        }

        .zone-maincontent-wrapper {
            float: none !important;
        }

        #region-sidebar-first {
            display: none;
        }

        #view-mediatheque {
            padding-right: 70px;

            .filters-search-range .search_submit {
                //width: 410px;
            }
        }

    }

    &.page-recherche {

        #page {
            #zone-maincontent-wrapper {
                width: 768px !important;
                max-width: 100%;
            }
        }

        .zone-maincontent-wrapper {
            float: none !important;
        }

        #region-sidebar-first {
            display: none;
        }

        .view-search {
            padding-right: 70px;

            .filters-search-range .search_submit {
                //width: 410px;
            }
        }

    }

    &.node-type-actu, &.page-actualites {

        #page {
            #zone-maincontent-wrapper {
                width: 768px !important;
                max-width: 100%;
            }
        }

        .zone-maincontent-wrapper {
            float: none !important;
        }

        #region-sidebar-first {
            display: none;
        }

        #zone-maincontent-wrapper .view-actualites {
            padding-right: 70px;
        }

    }

}

body #page #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block {
    height: 310px;
}

.node-type-home-univers .block-views-diaporama-homeunivers-block {
    height: 310px;
}

.node-type-home-univers .views-slideshow-cycle-main-frame-row-item {
    height: 310px !important;
}

/* ANNONCES */
.page-annonces-ajouter #zone-maincontent-wrapper {
    padding: 30px 0 0 30px;

    table {
        width: 100% !important;
    }
}

/* FOOTER */
#section-footer {

    .footer_full {
        width: 768px;

        .encart_footer {
            width: 768px;
        }

        .main_menu {
            width: 768px;
            padding: 60px 92px;
            overflow: hidden;

            ul {
                li {
                    width: 290px;
                }
            }
        }

        .copyright {
            width: 768px;
        }
    }
}

.page-mediatheque #cboxContent #cboxLoadedContent {
    height: 634px !important;
}