<?php
/**
 * Retourne le nombre d'utilisateur inactifs pour les entreprises.
 * @author Gael GALBAS-FRONTINOIS
 * @param entreprises : liste des entreprises
 * @return count : nombre d'utilisateurs
 */
function dashboard_db_get_count_users_inactifs_entreprises($entreprises) {
  db_set_active(@DB_EXTRANET);
  $query = db_select('lien_user_entreprise_ref_esclave_entreprise', 'lie');
  // condition sur les entreprises
  $db_or = db_or();
  foreach ($entreprises as $entreprise) {
    $db_or ->condition('lie.id_ref_esclave_entreprise', $entreprise, '=');
  }
  if(isset($db_or->conditions()['0'])) {
    $query->condition($db_or);
  }
  $query ->condition('lie.est_valide', '0', '=');
  $query->addExpression('count(distinct id_user_entreprise)');
  $result  = $query->execute()->fetchField();
  db_set_active();

  return $result;

}


