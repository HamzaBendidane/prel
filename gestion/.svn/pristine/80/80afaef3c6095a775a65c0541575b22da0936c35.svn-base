body {
    width: 100% !important;
    margin: 0;
    min-width: 100% !important;
    max-width: 100% !important;

    #page {
        width: 320px !important;
        margin: 0 auto;
    }

    &.front #zone-content-wrapper {
        background-image: none;
        padding-top: 0;
    }

    &.not-front .zone-content, &.front .zone-content {
        width: 320px !important;
        max-width: 320px !important;
        margin: 0 auto !important;
    }

    &.not-front #page #section-header .header_mobile .slider {
        display: none;
        margin: 0;
    }

    &.not-front #zone-content-wrapper {
        padding-top: 92px;
        background-image: none;
    }

    &.not-front .region-first-content {
        margin-bottom: 0 !important;
    }

    #block-ecofolio-footer-ecofolio-footer-full {
        display: none;
    }

    .zone-top-header .region-top-menu {
        display: none;
    }

    #page {

        #section-header {

            .header_full {
                .encart_top, .menu_espace_decla, .main_menu, .main_men_ipad{
                    display: none;
                }

                .slider {
                    width: 320px;
                    height: 402px;
                    margin: 92px auto 0 auto;

                    .view-diaporama-homepage .views-field-title-1 .slider-sstitre {
                        margin: 0;
                    }

                    .view-diaporama-homepage .views-field-title-1 .slider-sstitre a {
                        font-size: 20px;
                        line-height: 20px;
                        height: 30px;
                        text-decoration: none;
                    }

                    .view-diaporama-homepage .views-field-title-1 .slider-titre a {
                        font-size: 32px;
                        line-height: 32px;
                        text-decoration: none;
                    }

                    .view-diaporama-homepage .views-field-title-1 {
                        margin-left: 0;
                        left: 0;
                    }

                    .view-diaporama-homepage .views-slideshow-controls-bottom {
                        margin-left: 0;
                        width: 228px;
                        left: 0;
                    }

                    .views-slideshow-controls-top {
                        margin-left: 0;
                        right: 0;
                        left: auto;
                    }
                }
            }

            .header_mobile {
                display: block;

                .slider {
                    display: none;
                }

                .encart_top {
                    position: fixed;
                    top: 0;
                    left: 50%;
                    margin-left: -160px;
                    width: 320px;
                    height: 92px;
                    z-index: 300;
                    background-color: white;

                    .logo {
                        padding-left: 10px;
                        padding-top: 17px;
                        float: left;
                        width: 200px;

                        img {
                            width: 190px;
                            height: 58px;
                        }
                    }

                    .bt_menu {
                        float: right;
                        width: 92px;
                        height: 92px;
                        background-color: $blue;

                        .ico {
                            display: block;
                            width: 92px;
                            height: 92px;
                            background: transparent url("../images/2015/header/ico-burger.png") no-repeat center center;
                        }
                    }

                    .menu_top_right {
                        position: fixed;
                        top: 92px;
                        left: 50%;
                        margin-left: -160px;
                        width: 320px;
                        overflow: hidden;
                        height: 0;

                        .main_menu {
                            width: 320px;

                            .top {
                                overflow: hidden;

                                a.back {
                                    cursor: pointer;
                                    display: block;
                                    float: right;
                                    width: 92px;
                                    height: 310px;
                                    background: white url("../images/2015/header/ico-arrow-top-blue.png") no-repeat center 30px;
                                }

                                > ul {
                                    float: left;
                                    width: 228px;
                                    height: 310px;
                                    padding: 30px;
                                    background-color: $blue;

                                    li {
                                        display: block;
                                        padding: 0;
                                        margin: 20px 0 0 0;

                                        a {
                                            @include avant-garde-bold(16px, 18px);
                                            text-decoration: none;
                                            color: white;
                                        }

                                        div.submenu {
                                            position: absolute;
                                            top: 0;
                                            left: 320px;
                                            background-color: white;
                                            height: 402px;
                                            width: 320px;
                                            overflow: hidden;

                                            .back {
                                                cursor: pointer;
                                                display: block;
                                                float: left;
                                                width: 92px;
                                                height: 402px;
                                                background: $blue url("../images/2015/header/ico-arrow-right-blue.png") no-repeat center 30px;
                                            }

                                            .subsubmenu {
                                                float: right;
                                                padding: 30px;
                                                width: 228px;
                                                height: 402px;
                                                overflow-y: scroll;

                                                li {
                                                    list-style: none;

                                                    > a {
                                                        color: #5c656d;
                                                        @include avant-garde-bold(16px, 16px);
                                                        border: none;
                                                        margin: 0;
                                                        padding: 0;
                                                        @include single-transition(all, .2s, ease-out);

                                                        &:hover {
                                                            color: $blue;
                                                        }

                                                        &:before {
                                                            display: none;
                                                        }

                                                        + ul {
                                                            margin-top: 10px;
                                                            padding: 10px;

                                                            li {
                                                                padding-left: 0px;
                                                                margin-bottom: 8px;

                                                                a {
                                                                    @include avant-garde-demi(14px, 16px);
                                                                    color: #a3a3a3;
                                                                    @include single-transition(all, .2s, ease-out);

                                                                    &:hover {
                                                                        color: #7f7f7f;
                                                                    }
                                                                }

                                                                &.active-trail {
                                                                    background: transparent url("../images/2015/page/ico-arrow-right-grey.png") no-repeat left 11px;

                                                                    &.expanded {
                                                                        background-position: 0 10px;

                                                                        a {
                                                                            color: #a3a3a3;

                                                                            &.active {
                                                                                color: #7f7f7f;
                                                                            }

                                                                            &:hover {
                                                                                color: #7f7f7f;
                                                                            }
                                                                        }
                                                                    }

                                                                    a {
                                                                        color: #7f7f7f;
                                                                    }
                                                                }

                                                            }
                                                        }
                                                    }

                                                    &.active-trail {

                                                        > a.active, a.active-trail  {
                                                            color: $blue;

                                                            &:after {
                                                                display: none;
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }

                                        &:first-child {
                                            margin-top: 0;
                                        }
                                    }
                                }
                            }

                            .bottom {
                                width: 320px;
                                height: 92px;
                                background-color: white;

                                .follow_us {
                                    float: left;
                                    display: table;
                                    background-color: white;
                                    width: 228px;
                                    height: 92px;
                                    line-height: 92px;
                                    padding-left: 56px;

                                    .view-content {
                                        height: 92px;
                                        line-height: 92px;

                                        div {
                                            display: inline-block;
                                            vertical-align: middle;
                                        }

                                        .view-header {
                                            display: none;
                                            @include avant-garde-bold(15px, 15px);
                                            color: #009ddf;
                                            text-transform: uppercase;
                                        }


                                        .views-row-1 {
                                            margin-left: 8px;

                                            a {
                                                display: block;
                                                background: transparent url("../images/2015/footer/ico-twitter-off.png") no-repeat left top;
                                                width: 25px;
                                                height: 26px;
                                                @include single-transition(all, .2s, ease-out);

                                                img {
                                                    display: none;
                                                }

                                                &:hover {
                                                    background-image: url("../images/2015/footer/ico-twitter-on.png");
                                                }
                                            }
                                        }

                                        .views-row-2 {
                                            margin-left: 4px;

                                            a {
                                                display: block;
                                                background: transparent url("../images/2015/footer/ico-facebook-off.png") no-repeat left top;
                                                width: 26px;
                                                height: 26px;
                                                @include single-transition(all, .2s, ease-out);

                                                img {
                                                    display: none;
                                                }

                                                &:hover {
                                                    background-image: url("../images/2015/footer/ico-facebook-on.png");
                                                }
                                            }
                                        }

                                        .views-row-3 {
                                            margin-left: 4px;

                                            a {
                                                display: block;
                                                background: transparent url("../images/2015/footer/ico-youtube-off.png") no-repeat left top;
                                                width: 25px;
                                                height: 26px;
                                                @include single-transition(all, .2s, ease-out);

                                                img {
                                                    display: none;
                                                }

                                                &:hover {
                                                    background-image: url("../images/2015/footer/ico-youtube-on.png");
                                                }
                                            }
                                        }
                                    }
                                }

                                .seach_btn {
                                    cursor: pointer;
                                    float: right;
                                    width: 92px;
                                    height: 92px;
                                    background-color: $blue;

                                    a {
                                        display: block;
                                        width: 92px;
                                        height: 92px;
                                        background: transparent url("../images/2015/header/ico-search.png") no-repeat center center;
                                    }
                                }

                                div.search {
                                    overflow: hidden;
                                    width: 320px;
                                    height: 92px;
                                    position: absolute;
                                    z-index: 10;
                                    top: 310px;
                                    background-color: $blue;
                                    left: 100%;

                                    form {
                                        line-height: 92px;

                                        .form-item {
                                            float: left;
                                        }

                                        input[type="text"] {
                                            display: block;
                                            margin: 0;
                                            width: 228px;
                                            height: 92px;
                                            border: 2px solid $blue;
                                            border-right: none;
                                            background-color: #FFF;
                                            @include avant-garde-bold(20px, 82px);
                                            color: #009ddf;
                                            padding: 0 30px;
                                            @include border-radius(0);
                                        }

                                        input[type="submit"] {
                                            float: left;
                                            width: 44px;
                                            height: 44px;
                                            @include border-radius(50%);
                                            background-color: white;
                                            @include avant-garde-bold(16px, 40px);
                                            color: #009ddf !important;
                                            text-align: center;
                                            box-shadow: none;
                                            margin: 25px 0 0 24px;
                                            padding: 0;
                                            border: 2px solid white;
                                            @include single-transition(all, .2s, ease-out);

                                            &:hover {
                                                background-color: #009ddf;
                                                color: white !important;
                                            }
                                        }
                                    }

                                    /*.close {
                                        cursor: pointer;
                                        position: absolute;
                                        right: 0;
                                        width: 92px;
                                        height: 92px;
                                        background: transparent url("../images/2015/header/ico-cross.png") no-repeat center center;
                                        overflow: hidden;
                                        text-indent: 110%;
                                    }*/
                                }
                            }
                        }
                    }

                }
            }

        }

        /* HOME */
        .hp_first_content {

            .hp_top_left {
                width: 320px;
                position: relative;
                overflow: hidden;

                > a {

                    img {
                        position: absolute;
                        left: 50%;
                        margin-left: -240px;
                    }
                }

                .accroche {
                    width: 320px;
                    padding-right: 76px;

                    p {
                        font-size: 14px;
                        line-height: 16px;
                        width: 214px;
                    }
                }
            }

            .hp_top_center {
                width: 320px;

                .top {
                    padding: 30px;
                }
            }

            .hp_top_right {
                width: 320px;

                .top {
                    padding: 30px;
                }

                .encart {
                    text-align: right;
                    padding-right: 30px;
                }
            }
        }

        .hp_second_content {
            float: left;
            width: 320px;
            height: 402px;

            iframe {
                width: 320px;
                height: 402px;
            }
        }

        .hp_lsv {
            width: 320px;
            float: left;
            padding: 30px 60px 30px 30px;
            height: 402px;
            background-repeat: repeat;

            h2 {
                font-size: 32px;
                line-height: 36px;
            }

            .share.facebook {
                margin: 0;
                left: 21px;
                top: 300px;
            }

            .share.twitter {
                margin: 0;
                right: 21px;
                left: auto;
                top: 300px;
            }
        }

        .hp_bottom_left {
            width: 320px;
            overflow: hidden;

            .top {
                width: 320px;
                z-index: 10;
            }

            > a {

                img {
                    position: absolute;
                    left: 50%;
                    margin-left: -240px;
                    z-index: 1;
                }
            }

            .accroche {
                width: 320px;
                padding-right: 76px;
                z-index: 12;

                p {
                    font-size: 14px;
                    line-height: 16px;
                    width: 214px;
                }
            }
        }

        .hp_bottom_right, .hp_bottom_center {
            width: 320px;
        }

        /* PAGE */
        #region-sidebar-first, .grid-4.prefix-2.region.region-sidebar-first {
            display: none;
        }

        #zone-maincontent-wrapper {
            float: none !important;
            width: 320px !important;
        }

        .node-type-home-univers .views-slideshow-cycle-main-frame-row-item  {

        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block .views-field.views-field-title {
            top: 145px;
        }

        #zone-maincontent-wrapper {
            width: 320px !important;
        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block {
            width: 320px;
        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block .views-field.views-field-title {
            width: 320px;
        }

        #zone-maincontent-wrapper .views-field.views-field-title .slider-text {
            width: 320px;
        }

        #zone-maincontent-wrapper .views-field.views-field-title .slider-text .slider-accroche {
            background-position: 256px center;
            font-size: 16px;
            line-height: 18px;
        }

        #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block .views-slideshow-controls-bottom {
            width: 320px;
            top: 237px;
            padding-right: 0;
        }

        #zone-maincontent-wrapper .views-field.views-field-title .slider-text .slider-accroche {
            padding-right: 80px;
        }


        .form-wrapper, .form-item.form-type-checkbox, #edit-account.form-wrapper .form-item, .webform-container-inline {
            padding-left: 30px !important;
            padding-right:  30px !important;
        }

        #block-system-main .field-item table, #node-336 .field-item table {
            width: 320px;

            td:last-child {
                padding-right: 30px;
            }
        }

    }

    &.not-front #page #section-header .header_mobile .encart_top .menu_contextuel {
        display: block;
    }

}

#section-header .header_full .slider .view-diaporama-homepage .views-field-title-1, #section-header .header_mobile .slider .view-diaporama-homepage .views-field-title-1{
    width: 320px;
    top: 80px;
}

body #page #zone-maincontent-wrapper #block-views-diaporama-homeunivers-block, .views_slideshow_cycle_main .views-slideshow-cycle-main-frame {
    height: 364px;
}

.front .views_slideshow_cycle_main .field-content, .front .views-field-field-slider-homepage-image, .front .views-slideshow-cycle-main-frame-row-item, .front .views_slideshow_cycle_main .views-slideshow-cycle-main-frame-row {
    height: 402px !important;

    .field-content {
        width: 100%;
        height: 100%;

        a {
            display: block;
            width: 100%;
            height: 100%;
        }
    }
}

.front .views_slideshow_cycle_main .field-content img, .front .views-field-field-slider-homepage-image img, .front .views-slideshow-cycle-main-frame-row-item img, .front .views_slideshow_cycle_main .views-slideshow-cycle-main-frame-row img {
    height: 402px !important;
    width: auto !important;
    margin-left: -513px;
    left: 0;
}

body #page #section-header .header_mobile .slider .view-diaporama-homepage .views-field-title-1 {
    top: 118px;
    width: 300px;
}

#section-header .header_full .slider .slider-plus, #section-header .header_mobile .slider .slider-plus {
    top: 124px;
    left: 26px;
}

body #page #section-header .header_mobile .slider .view-diaporama-homepage .views-slideshow-controls-bottom {
    padding-left: 13px;
}

/* SINGLE */
#block-system-main .print-resize, #node-336 .print-resize {
    display: none;
}

.node-type-page .region-first-content .block-main h1.node-title {
    padding: 30px 30px 0 30px;
    text-align: left;
}

body .region-first-content .field-type-text-long h2, body .region-first-content .field-type-text-with-summary h2 {
    padding-left: 30px;
    padding-right: 30px;
    background-position: 31px top;
    text-align: left;
}

#zone-maincontent-wrapper .field-items .field-item p {
    padding: 0 30px;
}

.partage .share.facebook {
    right: 170px;
}

.partage .share.twitter {
    right: 15px;
}

#zone-maincontent-wrapper .field-name-title {
    padding-left: 30px;
    padding-right: 30px;
}

#zone-maincontent-wrapper .field-items .field-item .separateur.bleu {
    margin-left: 30px;
}

#zone-content-footer-wrapper {
    width: 320px;
    padding-bottom: 0;
 }

#zone-content-footer-wrapper #zone-content-footer #region-second-content {
    max-height: none !important;
    margin: 0 !important;
}

#zone-content-footer-wrapper .promo_left {
    width: 320px;
    overflow: hidden;

    > a {
        img {
            position: absolute;
            left: 50%;
            margin-left: -320px;
            z-index: 1;
        }

        .encart {
            width: 320px;

            p {
                font-size: 14px;
                line-height: 16px;
                width: 214px;
            }
        }
    }
}

.page-user .form-item input, .node-type-webform .form-item input, .region-first-content .form-item input, .region-first-content .form-item select, .region-first-content .form-item textarea, form.node-annonces-form .form-item-title.form-item input {
    width: 240px !important;
}

.region-top-menu, .region-logo, .region-slider, .node-type-home-univers .region-first-content, .front .region-second-content {
    display: inline-block !important;
}

#zone-top-header-wrapper {
    display: none;
}

body.front .region-first-content, body.front .region-second-content, body.front .region-third-content, body.front .region-fourth-content {
    padding-bottom: 0;
}